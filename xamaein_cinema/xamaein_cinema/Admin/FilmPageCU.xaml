<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xamaein_cinema.Admin.FilmPageCU"
             BackgroundColor="#1B1A28"
                    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label  Text="Фильм"  FontSize="Title" Padding="30,10,30,10" HorizontalOptions="Center" TextColor="White"/>
            <Entry   x:Name="NameEntry" TextColor="White" Placeholder = "Название" PlaceholderColor="Gray"  MaxLength="12" />
            <Entry x:Name="DiscEntry" Placeholder = "описание" HeightRequest="40" />
            <Entry x:Name="AgeEntry" Placeholder = "возрастное ограничение" Keyboard="Numeric"/>
            <Entry x:Name="ImageEntry"  Placeholder = "фото"/>
     

           
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20,0,0">
                <Button Text="Удалить" Clicked="Button_Clicked_1"  BackgroundColor="#9747FF" TextTransform="None"/>
                <Button Text="Отмена" Clicked="Button_Clicked_2"  BackgroundColor="#9747FF" TextTransform="None"/>
                <Button Text="Сохранить" Clicked="Button_Clicked" BackgroundColor="#9747FF" TextTransform="None"/>
           
              
            </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>